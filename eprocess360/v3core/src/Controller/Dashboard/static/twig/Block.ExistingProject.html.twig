<h3>Existing</h3>
<div class="list-group">
    {% for project in Response.data.projects %}
        <a href="{{ SysVar.get('siteUrl') }}/projects/{{ project.idProject }}" class="list-group-item">
            <h4 class="list-group-item-heading">{{ project.title }} <small>{{ project.state }}</small> {% if project.taskCount %}<span class="badge pull-right">{{ project.taskCount }}</span>{% endif %}</h4>
            <p class="list-group-item-text">{{ project.description }}</p>
        </a>
    {% else %}
        <span class="list-group-item"><h4 class="list-group-item-heading">No projects</h4>
                        <p class="list-group-item-text">You don't have any projects.</p>
                        </span>
    {% endfor %}
</div>
<a href="{{ SysVar.get('siteUrl') }}/projects" class="pull-right">See All Projects</a>